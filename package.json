{
  "name": "kickstart",
  "version": "0.1.0",
  "description": "This repo can kickstart any project that needs a web, mobile, tablet or desktop application. The goal is to compose a fully working application from scratch using a common framework.",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "bootstrap": "4.0.0-beta.3",
    "chart.js": "^2.7.1",
    "react": "^16.2.0",
    "react-chartjs-2": "^2.6.4",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "reactstrap": "^5.0.0-alpha.4"
  },
  "devDependencies": {
    "add": "^2.0.6",
    "autoprefixer": "^7.2.4",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "node-sass": "^4.7.2",
    "postcss-nested": "^3.0.0",
    "react-hot-loader": "^3.1.3",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "start-web": "NODE_ENV=development parcel -d build/web/dev src/web/public/index.html ",
    "build-web": "NODE_ENV=production parcel build -d build/web/prod src/web/public/index.html --public-url ./ --no-cache"
  },
  "postcss": {
    "modules": false,
    "plugins": {
      "postcss-nested": {},
      "autoprefixer": {
        "browsers": [
          ">1%",
          "last 4 versions",
          "Firefox ESR",
          "not ie < 9"
        ],
        "flexbox": "no-2009"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danmelton/kickstart.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danmelton/kickstart/issues"
  },
  "homepage": "https://github.com/danmelton/kickstart#readme"
}
